<div class="container mt-5">
  <h1>Log in</h1>

  <div class="container">
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>

    <%= f.email_field :email, class: 'form-control' %>
    <%= f.label :password %>

    <%= f.password_field :password, class: 'form-control' %>
    <%= f.submit "Log in", class: "btn btn-secondary my-3", style: "margin-top: 5px" %>
    <% end %> 
  </div>

  <p>New user? <%= link_to "Sign up now!", signup_path, class:"link-secondary" %></p>
</div>