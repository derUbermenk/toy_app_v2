<div class="container toy-show">

  <div class="container toy-info card center my-3 text-center">
    <span class="fw-bolder mt-2 fs-5"><%= @toy.name %></span>
    <hr>
    <div>
      <p class="fst-italic fw-lighter fs-6"><%= @toy.description %></p>
    </div>
  </div>

  <hr>

  <p>
    <a class="btn " data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
      <%= image_tag 'image.svg' %>
      <span class="fs-6 fw-lighter">Add new image</span>
    </a>
  </p>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <div class="toy-form">
        <%= form_for(@toy) do |f| %>
          <%= render 'error_messages', model: @toy %>

          <div class="field my-3">
            <%= f.file_field :images, class: "form-control form-control-sm", multiple: true %>
          </div>

          <div class="container d-none" id="image-preview-container">
            <div id="preview" class="d-flex justify-content-center flex-wrap" style>
            </div>
          </div>

          <div type="submit" name="commit" data-disable-with="Update Toy" class="d-flex justify-content-center">
            <%= image_tag 'upload.svg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div> 

  <hr>

  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-pills card-header-pills">
        <li class="nav-item">
          <%= link_to '#', class:"nav-link active" do %>
            <%= image_tag 'list.svg' %> 
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to '#', class:"nav-link" do %>
            <%= image_tag 'grid.svg' %> 
          <% end %>
        </li>
      </ul>
    </div>

    <div class="card-body d-flex align-items-center flex-column">
      <% @toy.images.each do |image| %>
        <div class="card toy-image my-2" id="img-card-<%=image.id%>">
          <div class="card-body d-flex flex-row-reverse">
            <%= link_to delete_image_path(image.id), method: :delete, remote: true do %>
              <%= image_tag 'trash.svg', class: 'img-interaction-button delete', id: image.id %>
            <% end %>
              <%= image_tag 'share-2.svg', class: 'img-interaction-button share', id: image.id %>
          </div>
          <%= image_tag url_for(image), class: "card-img-bottom" %>
        </div>
      <% end %>
    </div>
  </div>

</div>